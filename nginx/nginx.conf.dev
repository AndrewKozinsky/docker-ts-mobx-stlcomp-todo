include mime.types;

server {
    listen 80;
    server_name todo.local;

    location /test {
        return 200 "Everything is OK";
    }

    location /api {
        proxy_pass http://api:3001;
        rewrite ^/api\/(.*) /$1 break;
    }

    location / {
        proxy_pass http://app:3000;
        # Needed for sockets
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}
